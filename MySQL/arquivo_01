-- criação do banco de dados
CREATE DATABASE db_Biblioteca;

-- verificar os bancos de dados existentes
SHOW DATABASES;

-- para especificar qual banco de dados vai ser usado
USE db_Biblioteca;

-- para verificar qual banco de dados foi selecionado para trabalhar 
SELECT DATABASE();

-- para excluir o banco de dados 
-- DROP DATABASE IF EXISTS db_biblioteca; -- IF NOT EXISTS é um comando opcional 

-- mostra para você as tabelas do banco de dados 
SHOW TABLES;
